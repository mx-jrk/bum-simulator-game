<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Education_Page">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Образование"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/days_lived"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Дней прожито: "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/health"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Здоровье: "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Деньги: "
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/edu_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="education_selected"
                android:text="Жизненные уроки"
                android:layout_marginRight="5dp"
                android:textSize="12dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/edu_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="education_selected"
                android:text="Знания с энциклопедий"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/edu_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="education_selected"
                android:text="Школьное образование"
                android:layout_marginRight="5dp"
                android:textSize="12dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/edu_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="education_selected"
                android:text="Высшее образование"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вернуться на главную"
            android:onClick="go_to_mainPage"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>